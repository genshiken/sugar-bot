generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model danbooruusers {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  discord_uid String
  api_key String
  username String
}

model feedrecord {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  amount Int
  date   DateTime @db.Date
  uid    String
}

model users {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  uid  String
  powerup String[]
  active_powerup String?
}

model userstate {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  actionPoint Int
  uid String
  physical Int
  affection Int
  fatigue Int
  boredom Int
}